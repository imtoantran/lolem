  / header-top-second end
  / header-top end
  / header start
  / classes:
  / "fixed": enables fixed navigation mode (sticky menu) e.g. class="header fixed clearfix"
  / "dark": dark version of header e.g. class="header dark clearfix"
  / "full-width": mandatory class for the full-width menu layout
  / "centered": mandatory class for the centered logo layout
  / ================
  %header.header.fixed.clearfix
    .container
      .row
        .col-md-3
          / header-left start
          / ================
          .header-left.clearfix
            / logo
            #logo.logo
              %a{:href => root_path}
                = image_tag('logo.png')
        / name-and-slogan
        /.site-slogan{:style => "letter-spacing: 3px;"}
        /  cosmetic,. ltd
        / header-left end
        .col-md-9
          / header-right start
          / ================
          .header-right.clearfix
            / main-navigation start
            / classes:
            / "onclick": Makes the dropdowns open on click, this the default bootstrap behavior e.g. class="main-navigation onclick"
            / "animated": Enables animations on dropdowns opening e.g. class="main-navigation animated"
            / "with-dropdown-buttons": Mandatory class that adds extra space, to the main navigation, for the search and cart dropdowns
            / ================
            .main-navigation.animated.with-dropdown-buttons
              / navbar start
              / ================
              %nav.navbar.navbar-default{:role => "navigation"}
                .container-fluid
                  / Toggle get grouped for better mobile display
                  .navbar-header
                    %button.navbar-toggle{"data-target" => "#navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
                      %span.sr-only Toggle navigation
                      %span.icon-bar
                      %span.icon-bar
                      %span.icon-bar
                  / Collect the nav links, forms, and other content for toggling
                  #navbar-collapse-1.collapse.navbar-collapse
                    / main-menu
                    %ul.nav.navbar-nav
                      %li.active=link_to 'Trang chủ'
                      %li=link_to(t("shoppe.services.services"),"#services")
                      %li=link_to t('Shoppe.menu.blogs') ,posts_path
                    / main-menu end
                    / header dropdown buttons
                    .header-dropdown-buttons.hidden-xs
                      .btn-group.dropdown
                        %button.btn.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
                          %i.icon-search
                        %ul.dropdown-menu.dropdown-menu-right.dropdown-animation
                          %li
                            %form.search-box.margin-clear{:role => "search"}
                              .form-group.has-feedback
                                %input.form-control{:placeholder => "Search", :type => "text"}
                                  %i.icon-search.form-control-feedback
                      .btn-group.dropdown
                        %button.btn.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
                          %i.icon-basket-1
                          %span.cart-count.default-bg= current_order.total_items
                        %ul.dropdown-menu.dropdown-menu-right.dropdown-animation.cart
                          %li
                            %table.table.table-hover
                              %thead
                                %tr
                                  %th.quantity QTY
                                  %th.product Sản phẩm
                                  %th.amount Tổng
                              %tbody
                                %tr
                                  %td.quantity 2 x
                                  %td.product
                                    %a{:href => "shop-product.html"} Android 4.4 Smartphone
                                    %span.small 4.7" Dual Core 1GB
                                  %td.amount $199.00
                            .panel-body.text-right
                              %a.btn.btn-group.btn-gray.btn-sm{:href => "shop-cart.html"} View Cart
                              %a.btn.btn-group.btn-gray.btn-sm{:href => "shop-checkout.html"} Checkout
  / header dropdown buttons end
  / navbar end
  / main-navigation end
  / header-right end
  / header end
  / header-container end
