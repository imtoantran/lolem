                info@vicdina.com
        / header-top-first end
        .col-xs-9.col-sm-6.col-md-3
          / header-top-second start
          / ================
          #header-top-second.clearfix
            / header top dropdowns start
            / ================
            .header-top-dropdown.text-right
              .btn-group
                %a.btn.btn-default.btn-sm{:href => "#"}
                  %i.fa.fa-user.pr-10
                  Đăng ký
              .btn-group.dropdown
                %button.btn.dropdown-toggle.btn-default.btn-sm{"data-toggle" => "dropdown", :type => "button"}
                  %i.fa.fa-lock.pr-10
                  Đăng nhập
