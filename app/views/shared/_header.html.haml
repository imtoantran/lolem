                          %i.fa.fa-user.form-control-feedback
                      .form-group.has-feedback
                        %label.control-label Password
                        %input.form-control{:placeholder => "", :type => "password"}
                          %i.fa.fa-lock.form-control-feedback
                      %button.btn.btn-gray.btn-sm{:type => "submit"} Log In
                      %span.pl-5.pr-5 or
                      %button.btn.btn-default.btn-sm{:type => "submit"} Sing Up
                      %ul
                        %li
                          %a{:href => "#"} Forgot your password?
                      %span.text-center Đăng nhập with
                      %ul.social-links.circle.small.colored.clearfix
