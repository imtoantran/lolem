- active_nav_item :posts
- @page_title = @post.title + " - " + @post.post_category.name
%section.main-container
  .container
    .row
      / main start
      .main.col-md-8
        -# page-title start
        %h1.page-title #{@post.title}
        -# page-title end
        %article.blogpost.full
          %header
            .post-info
              %span.post-date
                %i.icon-calendar
                %span.day #{@post.updated_at.strftime("%d")}
                %span.month #{@post.updated_at.strftime("%m %Y")}
                %span.submitted
                  %i.icon-user-1
                %span.commented
                  %i.icon-chat
          .blogpost-content
            %p.text-center
              = image_tag @post.default_image.path, :alt => @post.title, :class => 'img-responsive img-thumbnail'
            = markdown @post.description
          %footer.clearfix
            .tags.pull-left
              %i.icon-tags
              = succeed "," do
                %a{:href => "#"} tag 1
              = succeed "," do
                %a{:href => "#"} tag 2
              %a{:href => "#"} long tag 3
            .link.pull-right
              %ul.social-links.circle.small.colored.clearfix.margin-clear.text-right.animated-effect-1
                %li.twitter
                  %a{:href => "http://www.twitter.com", :target => "_blank"}
                    %i.fa.fa-twitter
                %li.googleplus
                  %a{:href => "http://plus.google.com", :target => "_blank"}
                    %i.fa.fa-google-plus
                %li.facebook
                  %a{:href => "http://www.facebook.com", :target => "_blank"}
                    %i.fa.fa-facebook
      =render 'shared/side_bar'